<div class="panel-body">
    <strong>{{project.Name}}</strong>

    <div class="pull-right">
        <button class="glyphicon glyphicon-pencil icon-button" ng-click="handlers.action.editProject(project)" disabled></button>
        <button class="glyphicon glyphicon-trash icon-button alert-danger" ng-click="handlers.action.deleteProject(project.ID)"></button>
    </div>

</div>

<div class="panel-footer">
    <div ng-show="project.Description.length > 0">
        <label class="control-label">Description:</label> <div class="well well-sm" style="background: white"> {{project.Description}}</div>
    </div>
    <div class="row">
        <div class="col-xs-12">
            <button class="glyphicon glyphicon-check icon-button" ng-click="handlers.action.taskMode(project)">0</button><!--{{project.taskCount}}-->
            <button class="glyphicon glyphicon-user icon-button" disabled>1</button><!--{{project.boundUsers}}-->
        </div>
    </div>
