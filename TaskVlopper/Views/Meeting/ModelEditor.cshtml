@model TaskVlopper.Base.Model.Meeting

<h5>Model editor</h5>

<div class="form-horizontal">
    <div class="form-group">
        @Html.LabelFor(p => p.ProjectID, new { @class = "col-sm-4 control-label" })
        <div class="col-sm-8">
            @Html.TextBoxFor(p => p.ProjectID, new { @class = "form-control", placeholder = "ProjectID" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(p => p.TaskID, new { @class = "col-sm-4 control-label" })
        <div class="col-sm-8">
            @Html.TextAreaFor(p => p.TaskID, new { @class = "form-control", placeholder = "TaskID" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(p => p.DateAndTime, new { @class = "col-sm-4 control-label" })
        <div class="col-sm-8">
            @Html.TextBoxFor(p => p.DateAndTime, new { @class = "form-control", placeholder = "Date and time" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(p => p.Title, new { @class = "col-sm-4 control-label" })
        <div class="col-sm-8">
            @Html.TextBoxFor(p => p.Title, new { @class = "form-control", placeholder = "Title" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(p => p.Description, new { @class = "col-sm-4 control-label" })
        <div class="col-sm-8">
            @Html.TextBoxFor(p => p.Description, new { @class = "form-control", placeholder = "Description" })
        </div>
    </div>

    <div class="col-sm-8 col-sm-push-4">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</div>