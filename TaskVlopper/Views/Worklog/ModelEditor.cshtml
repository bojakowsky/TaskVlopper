@model TaskVlopper.Models.WorklogViewModel

<h5>Model editor</h5>

<div class="form-horizontal">
    <div class="form-group">
        @Html.LabelFor(p => p.TaskID, new { @class = "col-sm-4 control-label" })
        <div class="col-sm-8">
            @Html.TextBoxFor(p => p.TaskID, new { @class = "form-control", placeholder = "TaskID" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(p => p.UserID, new { @class = "col-sm-4 control-label" })
        <div class="col-sm-8">
            @Html.TextAreaFor(p => p.UserID, new { @class = "form-control", placeholder = "UserID" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(p => p.Description, new { @class = "col-sm-4 control-label" })
        <div class="col-sm-8">
            @Html.TextBoxFor(p => p.Description, new { @class = "form-control", placeholder = "Description" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(p => p.Date, new { @class = "col-sm-4 control-label" })
        <div class="col-sm-8">
            @Html.TextBoxFor(p => p.Date, new { @class = "form-control", placeholder = "Date" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(p => p.Hours, new { @class = "col-sm-4 control-label" })
        <div class="col-sm-8">
            @Html.TextBoxFor(p => p.Hours, new { @class = "form-control", placeholder = "Hours", type = "number", min = "0" })
        </div>
    </div>

    <div class="col-sm-8 col-sm-push-4">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</div>